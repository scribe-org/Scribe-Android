<?xml version="1.0" encoding="utf-8"?>
<!-- 1x3 Grid with arrow keys on sides -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:spacing="4dp">
        <Button
            android:id="@+id/conjugate_arrow_left"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_all_corners"
            android:layout_margin="4dp"
            android:drawableStart="@drawable/ic_left_arrow"
            android:textSize="24sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/conjugate_btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_all_corners"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/conjugate_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_all_corners"
            android:drawablePadding="@drawable/ic_right_arrow"
            android:layout_margin="4dp"
            android:text="â–º"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/conjugate_btn_2"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_all_corners"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/conjugate_btn_3"
        android:layout_width="30dp"
        android:background="@drawable/rounded_all_corners"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
