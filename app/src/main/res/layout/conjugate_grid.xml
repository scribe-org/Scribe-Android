<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conjugate_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="center">

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <Button android:id="@+id/conjugate_btn_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="20sp" />
        <Button android:id="@+id/conjugate_btn_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="20sp" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <Button android:id="@+id/conjugate_btn_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="20sp" />
        <Button android:id="@+id/conjugate_btn_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
